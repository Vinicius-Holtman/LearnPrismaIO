generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Courses {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  duration    Int
  create_at   DateTime @default(now())

  @@map("courses")
}

model Teacher {
  id String @id @default(uuid())
  name String @unique

  @@map("teachers")
}

model Modules {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  create_at   DateTime @default(now())

  @@map("modules")
}
